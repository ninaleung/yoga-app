<%= render partial: "partials/header", locals: {
  current_user: current_user,
  is_angular: false
} %>

<div id="wrapper">

  <!-- SLIDER -->
  <section id="slider" class="fullheight" style="background-image:url('/assets/images/backgrounds/up.jpg')">
    <div class="overlay dark-3"><!-- dark overlay [0 to 9 opacity] --></div>

    <div class="display-table">
      <div class="display-table-cell vertical-align-middle">
        <div class="container">

          <div class="slider-featured-text text-left">
            <section id="portfolio" class="dark nopadding-bottom nopadding-top">
              <div class="container">

                <div class="row padding-50">

                  <div class="col-md-5 col-sm-5">

                    <!-- Subtitle -->
                    <div class="heading-title heading-border">
                      <h2><%= @yoga_class.name %></h2>

                      <ul class="list-inline categories nomargin">
                        <li><%= @yoga_class.start.strftime("%A, %b %d, %Y") %></li>
                        <li><%= @yoga_class.start.strftime("%I:%M %p") %></li>
                      </ul>

                    </div>
                    <!-- /Subtitle -->
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <tbody>
                          <tr>
                            <td><strong>Studio: </strong></td>
                            <td><%= link_to @yoga_class.studio.name, "/studios/#{@yoga_class.studio.id}" %></td>
                          </tr>
                          <tr>
                            <td class="bold">Location: </td>
                            <td><%= @yoga_class.studio.address %></td>
                          </tr>
                          <tr>
                            <td class="bold">Teacher: </td>
                            <td><%= @yoga_class.user.first_name %> <%= @yoga_class.user.last_name[0,1] %>.</td>
                          </tr>
                          <tr>
                            <td class="bold">Level: </td>
                            <td><%= @yoga_class.level %></td>
                          </tr>
                          <tr>
                            <td class="bold">Duration: </td>
                            <td><%= @yoga_class.duration %> minutes</td>
                          </tr>
                          <tr>
                            <td class="bold">Style: </td>
                            <td><%= @yoga_class.style %></td>
                          </tr>
                          <tr>
                            <td class="bold">Cost: </td>
                            <td><%= number_to_currency(@yoga_class.price) %></td>
                          </tr>
                        </tbody>
                      </table>

                      <div class="text-center">
                        <h5><i class="fa fa-clock-o"></i> Class starts in:</h5>
                        <div class="countdown dark" data-from="<%= (@yoga_class.start + 6.hours) %>" data-labels="years,months,weeks,days,hour,min,sec"><!-- Example Date From: December 31, 2018 15:03:26 --></div>
                      </div>
                    </div>

                    <br>
                    
                    <ul class="list-inline list-unstyled text-center">
                      <li><%= form_tag '/saved_classes', method: :post do %>
                        <div>
                          <%= hidden_field_tag :yoga_class_id, @yoga_class.id %>
                          <%= submit_tag "SAVE CLASS TO CALENDAR" %>
                        </div>
                      <% end %></li>

                      <li><% if @yoga_class.studio.sign_up_link %>
                        <%= button_to "SIGN UP FOR CLASS", "http://#{@yoga_class.studio.sign_up_link}", method: :get, form: {target: '_blank'}  %>
                      <% end %></li>
                    </ul>
                    <h3><i class="glyphicon glyphicon-backward"></i> <%= link_to "Back", url_for(:back) %></h3>
                  </div>

                  <div class="col-md-6 col-sm-6">
                    <iframe
                      width="500"
                      height="450"
                      frameborder="0" style="border:10"
                      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyC_Sovq3pNCJjzkjZylQffgL7n5fqi4yXw&q=<%= @yoga_class.studio.address %>" allowfullscreen>
                    </iframe>

                    <div class="pull-right">

                    <% if user_signed_in? && current_user.role_id == 1 %>
                    <h2><%= link_to "Edit this class", "/yoga_classes/#{@yoga_class.id}/edit" %></h2>
                    <h2><%= link_to "Delete this class", "/yoga_classes/#{@yoga_class.id}/", method: :delete %></h2>
                    <% end %>

                    <% if user_signed_in? && @yoga_class.user_id == current_user.id %>
                    <h2><%= link_to "Edit this class", "/yoga_classes/#{@yoga_class.id}/edit" %></h2>
                    <% end %>

                    <% if user_signed_in? && @yoga_class.studio.user_id == current_user.id %>
                    <h2><%= link_to "Edit this class", "/yoga_classes/#{@yoga_class.id}/edit" %></h2>
                    <h2><%= link_to "Delete this class", "/yoga_classes/#{@yoga_class.id}/", method: :delete %></h2>
                    <% end %>
                    </div>

                  </div>

                  </div>
                </div>


              </section>
            </div>

          </div>
        </div>
      </div>

    </section>
    <!-- /SLIDER -->
    <!-- FOOTER -->
    <footer id="footer">
      

      <div class="copyright">
        <div class="container">
          <ul class="pull-right nomargin list-inline mobile-block">
            <li><a href="#">Terms &amp; Conditions</a></li>
            <li>&bull;</li>
            <li><a href="#">Privacy</a></li>
          </ul>
          &copy; All Rights Reserved, Company LTD
        </div>
      </div>
    </footer>
    <!-- /FOOTER -->