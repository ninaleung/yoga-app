<%= render partial: "partials/header", locals: {
  current_user: current_user,
  is_angular: false
} %>
<section>
  <div class="container">
   <div class="row">
    <div class="col-md-6 col-sm-6">
      <div class="nomargin sky-form boxed">
        <header>
          <i class="fa fa-plus"></i> Add a Yoga Class
        </header>
        <fieldset class="nomargin">
          <%= form_tag "/yoga_classes/", method: :post do %>
          <div>
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: "wide-field" %>
          </div>
          <div>
            <%= label_tag :studio_id %>
            <% if current_user.role_id == 1 %>
            <%= select_tag 'studio_id', options_from_collection_for_select(@studios, 'id', 'name'), class: "wide-field" %>
            <% else %>
            <%= select_tag 'studio_id', options_from_collection_for_select(@studio, 'id', 'name'), class: "wide-field" %>
            <% end %>
          </div>
          <div>
            <%= label_tag :start_date %>
            <%= date_field_tag :date, Date.today, class: "wide-field" %>
          </div>
          <div>
            <%= label_tag :start_time %>
            <%= time_field_tag :time, nil, class: "wide-field" %>
          </div>
          <div>
            <%= label_tag :duration %>
            <%= text_field_tag :duration, nil, class: "wide-field" %>
          </div>
          <div>
            <%= label_tag :price %>
            <%= text_field_tag :price, nil, class: "wide-field" %>
          </div>
          <div>
            <%= label_tag :level %>
            <%= select_tag :level, options_for_select([ "Open", "Beginner", "Intermediate", "Advanced"]), class: "wide-field" %>
          </div>
          <div>
            <%= label_tag :style %>
            <%= select_tag :style, options_for_select([ "Ashtanga", "Bikram", "Hatha", "Restorative", "Vinyasa", "Other"]), class: "wide-field" %>
          </div>
          <div>
            <%= label_tag :teacher_name %>
            <%= text_field_tag :teacher_name, nil, class: "wide-field" %>
          </div>
          <div>
            <%= submit_tag 'Add a yoga class', class: "button" %>
          </div>
          <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
</section>