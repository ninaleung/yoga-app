<section id="slider" class="height-800" style="background-image:url('../images/inside.jpg')">
        <div class="overlay dark-3"><!-- dark overlay [0 to 9 opacity] -->
        </div>

  <div class="container">

    <div class="row">

      <div class="col-md-6 col-md-offset-3">

        <div class="box-dark box-border-top padding-30">
          <div class="box-title margin-bottom-30">
            <h2 class="size-20">Welcome back, dear. Please sign in: </h2>
          </div>


          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"}) do |f| %>
          <div class="form-control">
            <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          </div>

          <div class="form-control">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>

          <div class="actions">
            <div class="row">


              <div class="col-md-12 text-right">

                <button class="btn btn-primary">Log In</button>

              </div>

            </div>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>