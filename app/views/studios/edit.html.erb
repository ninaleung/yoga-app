<%= render partial: "partials/header", locals: {
  current_user: current_user,
  is_angular: false
} %>      
      <section>
        <div class="container">
         <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="nomargin sky-form boxed">
              <header>
                <i class="fa fa-pencil"></i> Edit Yoga Studio
              </header>
              <fieldset class="nomargin"> 
                <%= form_tag "/studios/#{@studio.id}", method: :patch do %>
                <div>
                  <%= label_tag :name  %>
                  <%= text_field_tag :name, @studio.name, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :address %>
                  <%= text_field_tag :address, @studio.address, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :phone %>
                  <%= text_field_tag :phone, @studio.phone, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :email %>
                  <%= text_field_tag :email, @studio.email, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :website %>
                  <%= text_field_tag :website, @studio.website, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :logo_url %>
                  <%= text_field_tag :logo_url, @studio.logo_url, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :description %>
                  <%= text_area_tag :description, @studio.description, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :class_schedule_link %>
                  <%= text_field_tag :class_schedule_link, @studio.class_schedule_link, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :sign_up_link %>
                  <%= text_field_tag :sign_up_link, @studio.sign_up_link, class: "wide-field" %>
                </div>
                <div>
                  <%= label_tag :Studio_Owner %>
                  <%= select_tag 'user_id', options_from_collection_for_select(@owners, 'id', 'email', 
                    if @studio.user
                      @studio.user.id
                    else
                      nil
                    end
                  ), class: "wide-field" %>
                </div>
                <div>
                  <%= submit_tag 'Save changes to yoga studio', class: "button" %>
                </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </section>